<%- include('partials/header.ejs') %>

    <div class="container my-5">
        <div class="row">
            <% posts.forEach(post=> { %>
                <div class="col-md-6 mb-4">
                    <div
                        class="row g-0 border rounded overflow-hidden flex-md-row shadow-sm h-md-250 position-relative card-hover">

                        <div class="col p-4 d-flex flex-column position-static">
                            <h3 class="mb-0">
                                <%= post.title %>
                            </h3>
                            <div class="mb-1 text-body-secondary">
                                <%= post.monDate %>
                            </div>

                            <p class="mb-auto truncate-description">
                                <%= post.description %>
                            </p>
                            <a href="/post/<%= post.id %>" class="icon-link gap-1 icon-link-hover stretched-link">
                                Continue reading
                            </a>

                        </div>

                        <div class="col-auto">
                            <img src="<%= post.image %>" class="post-thumbnail" alt="Thumbnail">
                        </div>

                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <%- include('partials/footer.ejs') %>