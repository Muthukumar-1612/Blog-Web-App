<%- include('partials/header.ejs') %>

    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Post Your Article</h2>
            <form action="/submit" method="POST" enctype="multipart/form-data"
                class="p-4 border rounded shadow bg-white">
                <div class="form-group mb-3">
                    <label for="title">Title</label>
                    <input class="form-control" id="title" name="title" type="text" required>
                </div>
                <div class="form-group mb-3">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" name="description" rows="5" required></textarea>
                </div>

                <div class="form-group mb-3">
                    <label for="image" class="form-label">Upload Image <small>(â‰¤ 10 MB, JPG/JPEG/PNG)</small></label>
                    <div class="custom-file-input">
                        <input type="file" name="image" id="image" required>
                        <span id="fileName" class="custom-file-label">No file selected</span>

                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>

        </div>
    </div>

    <%- include('partials/footer.ejs') %>